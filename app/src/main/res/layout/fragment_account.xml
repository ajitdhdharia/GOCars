<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountDetails.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/img"
         android:layout_centerHorizontal="true"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="150dp"
        android:layout_height="100dp"/>
        <TextView
        android:id="@+id/username"
        android:text=" Username"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/etstyles"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/fname"
        android:text=" FirstName"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/etstyles"
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lname"
            android:text=" LastName"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email"
            android:text=" Email"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mphon"
            android:text=" Mobile No."
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address"
            android:text=" Address"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/mphon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/payment"
            android:text=" Payment Details"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/licence"
            android:text=" Driving licence"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/colorblack"
            android:drawableLeft="@drawable/ic_featured_play_list_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/etstyles"
            android:layout_below="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>